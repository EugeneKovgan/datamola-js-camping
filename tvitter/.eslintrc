{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],

  "rules": {
    "linebreak-style":0,
    "no-console": "off",
    "max-len": ["error", 150],
    "func-names": "off",
    "import/prefer-default-export": "off",
    "max-classes-per-file": ["error", 2],
    "parserOptions": {
      // Required for certain syntax usages
      "ecmaVersion": 2020
    }
    // "prefer-destructuring": "off"
    // "operator-linebreak": [2, "after", { "overrides": { "?": "after" } }]
  }
}
